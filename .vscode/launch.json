	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug client",
			"cargo": {
				"args": [
					"build",
					"--bin=rust_tcp_client",
					"--package=rust_tcp_client"
				],
				"filter": {
					"name": "rust_tcp_client",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}/rust_tcp_client/"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Unit test client",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=rust_tcp_client",
					"--package=rust_tcp_client"
				],
				"filter": {
					"name": "rust_tcp_client",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}/rust_tcp_client/"
		},

		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug server",
			"cargo": {
				"args": [
					"build",
					"--bin=rust_tcp_server",
					"--package=rust_tcp_server"
				],
				"filter": {
					"name": "rust_tcp_server",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}/rust_tcp_server/"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Unit test server",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=rust_tcp_server",
					"--package=rust_tcp_server"
				],
				"filter": {
					"name": "rust_tcp_server",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}/rust_tcp_server/"
		}
	]
}